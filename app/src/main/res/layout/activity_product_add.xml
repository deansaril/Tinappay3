<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product.product_add.ProductAddActivity">

    <TextView
        android:id="@+id/tv_pa_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_product"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gl_pa_top"
        app:layout_constraintStart_toStartOf="@+id/gl_pa_left"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_pa_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_pa_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_pa_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.075" />

    <View
        android:id="@+id/pa_title_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/gl_pa_top"
        app:layout_constraintEnd_toStartOf="@+id/gl_pa_right"
        app:layout_constraintStart_toStartOf="@+id/gl_pa_left" />

    <EditText
        android:id="@+id/et_pa_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/pa_name"
        android:autofillHints="no"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/gl_pa_right"
        app:layout_constraintStart_toStartOf="@+id/gl_pa_left"
        app:layout_constraintTop_toBottomOf="@+id/pa_title_divider" />

    <EditText
        android:id="@+id/et_pa_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/pa_type"
        android:autofillHints="no"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/gl_pa_right"
        app:layout_constraintStart_toStartOf="@+id/gl_pa_left"
        app:layout_constraintTop_toBottomOf="@+id/et_pa_name" />

    <EditText
        android:id="@+id/et_pa_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/pa_price"
        android:autofillHints="no"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toStartOf="@+id/gl_pa_right"
        app:layout_constraintStart_toStartOf="@+id/gl_pa_left"
        app:layout_constraintTop_toBottomOf="@+id/et_pa_type" />

    <EditText
        android:id="@+id/et_pa_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/pa_description"
        android:autofillHints="no"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toStartOf="@+id/gl_pa_right"
        app:layout_constraintStart_toStartOf="@+id/gl_pa_left"
        app:layout_constraintTop_toBottomOf="@+id/et_pa_price" />

    <TextView
        android:id="@+id/tv_pa_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        app:layout_constraintEnd_toStartOf="@+id/gl_pa_right"
        app:layout_constraintStart_toStartOf="@+id/gl_pa_left"
        app:layout_constraintTop_toBottomOf="@+id/et_pa_description" />

    <ImageButton
        android:id="@+id/ib_pa_edit_ingredient"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/tv_pa_ingredients"
        app:layout_constraintTop_toBottomOf="@+id/et_pa_description"
        app:srcCompat="@drawable/pencil" />

    <Button
        android:id="@+id/et_btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/add"
        app:layout_constraintEnd_toStartOf="@+id/gl_pa_right"
        app:layout_constraintStart_toStartOf="@+id/gl_pa_left"
        app:layout_constraintTop_toBottomOf="@+id/ib_pa_edit_ingredient" />

    <ProgressBar
        android:id="@+id/pb_pa"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>